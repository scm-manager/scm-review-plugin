<repository-permissions>
  <verbs>
    <verb>createPullRequest</verb>
    <verb read-only="true">readPullRequest</verb>
    <verb>commentPullRequest</verb>
    <verb>modifyPullRequest</verb>
    <verb>mergePullRequest</verb>
    <verb>configurePullRequest</verb>
    <verb read-only="true">readWorkflowConfig</verb>
    <verb>writeWorkflowConfig</verb>
    <verb>performEmergencyMerge</verb>
  </verbs>
  <roles>
    <role>
      <name>READ</name>
      <verbs>
        <verb>readPullRequest</verb>
      </verbs>
    </role>
    <role>
      <name>WRITE</name>
      <verbs>
        <verb>createPullRequest</verb>
        <verb>readPullRequest</verb>
        <verb>commentPullRequest</verb>
        <verb>mergePullRequest</verb>
      </verbs>
    </role>
    <role>
      <name>CI-SERVER</name>
      <verbs>
        <verb>readPullRequest</verb>
      </verbs>
    </role>
  </roles>
</repository-permissions>
